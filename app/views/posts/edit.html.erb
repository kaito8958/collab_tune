<div class="min-h-screen flex items-center justify-center bg-gradient-to-b from-[#C7D3E0] to-[#E5EBF2] px-4 py-10">
  <div class="bg-white/90 backdrop-blur-md shadow-xl rounded-2xl p-8 w-full max-w-2xl border border-gray-200">
    <h2 class="text-2xl font-extrabold text-center text-gray-800 mb-2">投稿を編集</h2>
    <p class="text-center text-sm text-gray-500 mb-8">
      内容を更新して、より魅力的なコラボ募集に仕上げましょう。
    </p>

    <%= form_with(model: @post, local: true, multipart: true, data: { controller: "post-form" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: @post %>

      <div class="space-y-6">
        <!-- 🎵 基本情報 -->
        <!-- タイトル -->
        <div>
          <%= f.label :title, "タイトル", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.text_field :title, class: "w-full px-3 py-2 border rounded-lg focus:ring-2 focus:ring-purple-400 focus:outline-none" %>
        </div>

        <!-- 音源ファイル -->
        <div>
          <%= f.label :audio, "音源ファイル（再アップロード可）", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.file_field :audio, accept: "audio/mpeg", class: "w-full px-3 py-2 border rounded-lg bg-gray-50 focus:ring-2 focus:ring-purple-400 focus:outline-none" %>
          <% if @post.audio.attached? %>
            <p class="text-xs text-gray-500 mt-1">現在のファイル：<%= @post.audio.filename.to_s %></p>
          <% end %>
        </div>

        <!-- ジャンル（複数） -->
        <div>
          <%= f.label :genre_ids, "ジャンル", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <div class="grid grid-cols-2 gap-2">
            <% Genre.all.each do |genre| %>
              <label class="flex items-center space-x-2">
                <%= check_box_tag "post[genre_ids][]", genre.id, @post.genre_ids&.include?(genre.id), class: "rounded text-purple-600 focus:ring-purple-500" %>
                <span class="text-gray-700 text-sm"><%= genre.name %></span>
              </label>
            <% end %>
          </div>
        </div>

        <!-- テンポ -->
        <div>
          <%= f.label :tempo, "テンポ（BPM）", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.number_field :tempo, class: "w-full px-3 py-2 border rounded-lg focus:ring-2 focus:ring-purple-400 focus:outline-none" %>
        </div>

        <!-- 説明 -->
        <div class="mb-8">
          <%= f.label :description, "説明", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.text_area :description, rows: 4, class: "w-full px-3 py-2 border rounded-lg focus:ring-2 focus:ring-purple-400 focus:outline-none resize-none" %>
        </div>

        <!-- 🎬 コラボ募集情報 -->
        <!-- 募集状態セレクト -->
        <div>
          <%= f.label :status, "募集状態", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.select :status,
                Post.statuses.keys.map { |k| [k == "recruiting" ? "🟢 コラボ募集中" : "🔒 募集停止", k] },
                {},
                class: "w-full px-3 py-2 border rounded-lg focus:ring-2 focus:ring-purple-400 focus:outline-none",
                data: { "post-form-target": "statusSelect", action: "change->post-form#toggleRecruitFields" } %>
        </div>

        <!-- 以下、募集中のときのみ表示 -->
        <div data-post-form-target="recruitFields" class="<%= @post.recruiting? ? '' : 'hidden' %> mt-6 space-y-4">
          <!-- 募集パート -->
          <div class="mb-8">
            <%= f.label :looking_for_skill_ids, "募集パート", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <div class="grid grid-cols-2 gap-2">
              <% LookingForSkill.all.each do |skill| %>
                <label class="flex items-center space-x-2">
                  <%= check_box_tag "post[looking_for_skill_ids][]", skill.id, @post.looking_for_skill_ids&.include?(skill.id), class: "rounded text-purple-600 focus:ring-purple-500" %>
                  <span class="text-gray-700 text-sm"><%= skill.name %></span>
                </label>
              <% end %>
            </div>
          </div>

          <!-- 募集の詳細 -->
          <div>
            <%= f.label :recruiting_details, "募集の詳細（どんなコラボを求めていますか？）", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.text_area :recruiting_details,
                  rows: 4,
                  class: "w-full px-3 py-2 border rounded-lg focus:ring-2 focus:ring-purple-400 focus:outline-none resize-none" %>
          </div>
        </div>

        <!-- 更新ボタン -->
        <div class="pt-4">
          <%= f.submit "更新する", class: "w-full py-3 bg-gradient-to-r from-purple-600 to-indigo-600 hover:from-purple-700 hover:to-indigo-700 text-white font-semibold rounded-lg shadow-md hover:shadow-lg transition-all" %>
        </div>
      </div>
    <% end %>

    <div class="mt-8 text-center">
      <%= link_to "← 投稿詳細に戻る", post_path(@post), class: "text-sm text-purple-600 hover:underline" %>
    </div>
  </div>
</div>
