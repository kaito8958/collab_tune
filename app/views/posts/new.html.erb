<div class="min-h-screen flex items-center justify-center bg-gradient-to-b from-[#C7D3E0] to-[#E5EBF2] px-4 py-10">
  <div class="bg-white/90 backdrop-blur-md shadow-xl rounded-2xl p-8 w-full max-w-2xl border border-gray-200">
    <h2 class="text-2xl font-extrabold text-center text-gray-800 mb-2">🎵 新しいコラボを投稿</h2>
    <p class="text-center text-sm text-gray-500 mb-8">
      あなたの音をシェアして、共に作る仲間を見つけましょう。
    </p>

    <%= form_with(model: @post, local: true, multipart: true) do |f| %>
      <%= render "devise/shared/error_messages", resource: @post %>

      <div class="space-y-6">
        <!-- タイトル -->
        <div>
          <%= f.label :title, "タイトル", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.text_field :title, placeholder: "例：夜明けのシティポップ", class: "w-full px-3 py-2 border rounded-lg focus:ring-2 focus:ring-purple-400 focus:outline-none" %>
        </div>

        <!-- 音源ファイル -->
        <div>
          <%= f.label :audio, "音源ファイル（MP3形式）", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.file_field :audio, accept: "audio/mpeg", class: "w-full px-3 py-2 border rounded-lg bg-gray-50 focus:ring-2 focus:ring-purple-400 focus:outline-none" %>
          <p class="text-xs text-gray-500 mt-1">※ MP3形式・10MB以下推奨</p>
        </div>

        <!-- 説明 -->
        <div>
          <%= f.label :description, "説明", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.text_area :description, rows: 4, placeholder: "例：シティポップ調の曲です。ボーカル・作詞を募集しています！", class: "w-full px-3 py-2 border rounded-lg focus:ring-2 focus:ring-purple-400 focus:outline-none resize-none" %>
        </div>

        <!-- ジャンル -->
        <div>
          <%= f.label :genre, "ジャンル", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.text_field :genre, placeholder: "例：City Pop / Funk / Lo-fi", class: "w-full px-3 py-2 border rounded-lg focus:ring-2 focus:ring-purple-400 focus:outline-none" %>
        </div>

        <!-- テンポ -->
        <div>
          <%= f.label :tempo, "テンポ（BPM）", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.number_field :tempo, value: 120, class: "w-full px-3 py-2 border rounded-lg focus:ring-2 focus:ring-purple-400 focus:outline-none" %>
        </div>

        <!-- 投稿ボタン -->
        <div class="pt-4">
          <%= f.submit "投稿する", class: "w-full py-3 bg-gradient-to-r from-purple-600 to-indigo-600 hover:from-purple-700 hover:to-indigo-700 text-white font-semibold rounded-lg shadow-md hover:shadow-lg transition-all" %>
        </div>
      </div>
    <% end %>

    <div class="mt-8 text-center">
      <%= link_to "← トップに戻る", posts_path, class: "text-sm text-purple-600 hover:underline" %>
    </div>
  </div>
</div>
