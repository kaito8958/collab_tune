<!--  投稿一覧（全員表示） -->
<section class="max-w-6xl mx-auto px-6 py-8">
  <h2 class="text-xl font-semibold text-gray-700 mb-4 tracking-wide">
    最新の投稿
  </h2>

  <!-- ▼ 検索結果表示 -->
  <% if params[:q].present? %>
    <p class="text-sm text-gray-600 mb-6">
      「<%= params[:q] %>」の検索結果：<%= @posts.count %>件
    </p>
  <% end %>

  <% open_filter = params[:open] == "true" %>

  <!-- ▼ 絞り込みボタン -->
  <div class="flex justify-center mb-4 space-x-3">
    <%= link_to "すべて表示",
        posts_path,
        class: "px-3 py-1.5 rounded-xl text-xs font-medium
                #{!open_filter ? "bg-purple-600 text-white shadow-md" : "bg-gray-200 text-gray-700 hover:bg-gray-300"}" %>

    <%= link_to "募集中のみ",
        posts_path(open: "true"),
        class: "px-3 py-1.5 rounded-xl text-xs font-medium
                #{open_filter ? "bg-purple-600 text-white shadow-md" : "bg-gray-200 text-gray-700 hover:bg-gray-300"}" %>
  </div>

  <!-- ▼ 投稿カード一覧 -->
  <div class="flex flex-col items-center space-y-6">
    <%= render partial: "post_card", collection: @posts, as: :post %>
  </div>
</section>


