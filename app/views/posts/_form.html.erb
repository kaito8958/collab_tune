<%= form_with(model: @post, local: true) do |f| %>
  <div>
    <%= f.label :title, "タイトル" %><br>
    <%= f.text_field :title %>
  </div>

  <div>
    <%= f.label :audio, "音源ファイル (mp3, wavなど)" %><br>
    <%= f.file_field :audio, accept: "audio/*" %>
  </div>

  <div>
    <%= f.label :description, "説明" %><br>
    <%= f.text_area :description %>
  </div>

  <div>
    <%= f.label :genre, "ジャンル" %><br>
    <%= f.text_field :genre %>
  </div>

  <div>
    <%= f.label :tempo, "テンポ (BPM)" %><br>
    <%= f.number_field :tempo %>
  </div>

  <div>
    <%= f.submit "投稿する" %>
  </div>
<% end %>
