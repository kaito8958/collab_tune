<div class="min-h-screen flex items-center justify-center bg-gradient-to-b from-[#C7D3E0] to-[#E5EBF2] px-6">
  <div class="bg-white/90 backdrop-blur-md shadow-2xl rounded-3xl p-10 w-full max-w-2xl border border-gray-200">
    <h2 class="text-3xl font-extrabold text-center text-gray-800 mb-3">新規登録</h2>
    <p class="text-center text-sm text-gray-500 mb-8">
      CollabTuneへようこそ。音で繋がる仲間を見つけよう。
    </p>

    <%= form_for(@user, url: user_registration_path) do |f| %>
      <% if @user.errors.any? %>
        <div class="bg-red-50 border border-red-200 text-red-700 rounded-lg p-3 mb-4">
          <ul class="list-disc list-inside text-sm">
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
          <%= f.label :nickname, "ニックネーム", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.text_field :nickname, autofocus: true, placeholder: "例：CollabBeats", class: "w-full px-3 py-2 border rounded-lg focus:ring-2 focus:ring-purple-400 focus:outline-none" %>
        </div>

        <div>
          <%= f.label :email, "メールアドレス", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.email_field :email, autocomplete: "email", placeholder: "you@example.com", class: "w-full px-3 py-2 border rounded-lg focus:ring-2 focus:ring-purple-400 focus:outline-none" %>
        </div>

        <div>
          <%= f.label :password, "パスワード", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.password_field :password, autocomplete: "new-password", placeholder: "6文字以上の英数字", class: "w-full px-3 py-2 border rounded-lg focus:ring-2 focus:ring-purple-400 focus:outline-none" %>
        </div>

        <div>
          <%= f.label :password_confirmation, "パスワード確認", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "もう一度入力", class: "w-full px-3 py-2 border rounded-lg focus:ring-2 focus:ring-purple-400 focus:outline-none" %>
        </div>

        <div>
          <%= f.label :instrument, "担当パート", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.text_field :instrument, placeholder: "例：Vocal / Guitar / mix mastering etc.", class: "w-full px-3 py-2 border rounded-lg focus:ring-2 focus:ring-purple-400 focus:outline-none" %>
        </div>

        <div>
          <%= f.label :genre, "好きなジャンル", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.text_field :genre, placeholder: "例：City Pop, Lo-fi, EDM etc.", class: "w-full px-3 py-2 border rounded-lg focus:ring-2 focus:ring-purple-400 focus:outline-none" %>
        </div>

        <div class="col-span-1 md:col-span-2">
          <%= f.label :profile, "プロフィール", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.text_area :profile, rows: 3, placeholder: "自己紹介やコラボでやりたいことを書いてみましょう", class: "w-full px-3 py-2 border rounded-lg focus:ring-2 focus:ring-purple-400 focus:outline-none resize-none" %>
        </div>
      </div>

      <%= f.submit "登録する", class: "w-full py-3 mt-8 bg-gradient-to-r from-purple-600 to-indigo-600 hover:from-purple-700 hover:to-indigo-700 text-white font-semibold rounded-lg shadow-md transition" %>
    <% end %>

    <div class="mt-8 text-center text-sm">
      <%= link_to "すでにアカウントをお持ちの方はこちら", new_user_session_path, class: "text-purple-600 hover:underline" %>
    </div>
  </div>
</div>
