<div id="flash-container" class="fixed top-5 right-5 z-50 space-y-3">
  <% flash.each do |type, message| %>
    <% next if message.blank? %>

    <% color_classes = case type.to_sym
      when :notice then "bg-green-500 text-white"
      when :success then "bg-green-500 text-white"
      when :alert then "bg-red-500 text-white"
      when :error then "bg-red-500 text-white"
      else "bg-purple-600 text-white"
    end %>

    <div class="flash-message <%= color_classes %> px-4 py-3 rounded-lg shadow-lg transition transform duration-300 translate-y-0 opacity-100 flex items-center justify-between">
      <span><%= message %></span>
      <button class="ml-3 text-white/80 hover:text-white text-sm" onclick="this.parentElement.remove()">âœ•</button>
    </div>
  <% end %>
</div>
